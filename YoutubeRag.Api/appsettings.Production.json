{
  "AppSettings": {
    "Environment": "Production",
    "ProcessingMode": "Real",
    "StorageMode": "Database",
    "EnableAuth": true,
    "EnableWebSockets": true,
    "EnableMetrics": true,
    "EnableRealProcessing": true,
    "EnableDocs": false,
    "EnableCors": true
  },
  "OpenAI": {
    "ApiKey": "your-openai-api-key-here"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=3306;Database=youtube_rag_prod;Uid=youtube_rag_user;Pwd=your-secure-password;",
    "Redis": "localhost:6379",
    "VectorDatabase": "Host=localhost;Database=youtube_rag_vectors;Username=postgres;Password=your-secure-password;"
  },
  "JwtSettings": {
    "SecretKey": "your-production-jwt-secret-key-here-at-least-256-bits-long",
    "ExpiryMinutes": 60,
    "RefreshTokenExpiryDays": 7
  },
  "RateLimiting": {
    "PermitLimit": 100,
    "WindowMinutes": 1
  },
  "AllowedOrigins": [
    "https://yourdomain.com",
    "https://www.yourdomain.com"
  ],
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Error"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Error",
        "Microsoft.AspNetCore": "Error",
        "Microsoft.EntityFrameworkCore": "Error",
        "System": "Error",
        "YoutubeRag.VideoIngestion": "Warning",
        "YoutubeRag.Transcription": "Warning",
        "YoutubeRag.Jobs": "Warning",
        "YoutubeRag.Performance": "Information",
        "YoutubeRag.Security": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/youtuberag-prod-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{CorrelationId}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId", "WithEnvironmentName", "WithProcessId"],
    "Properties": {
      "Application": "YoutubeRag.Api",
      "Environment": "Production"
    }
  }
}