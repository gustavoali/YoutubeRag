{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=3306;Database=youtube_rag_db;Uid=youtube_rag_user;Pwd=youtube_rag_password;",
    "Redis": "localhost:6379"
  },
  "JwtSettings": {
    "SecretKey": "development-secret-please-change-in-production-youtube-rag-api-2024",
    "ExpirationInMinutes": 60,
    "RefreshTokenExpirationInDays": 7
  },
  "AppSettings": {
    "Environment": "Development",
    "ProcessingMode": "Mock",
    "StorageMode": "Database",
    "EnableAuth": true,
    "EnableWebSockets": true,
    "EnableMetrics": true,
    "EnableRealProcessing": false,
    "EnableDocs": true,
    "EnableCors": true
  },
  "AllowedOrigins": [
    "http://localhost:3000",
    "http://localhost:3001",
    "http://localhost:3002",
    "http://localhost:3003",
    "http://localhost:3004",
    "http://localhost:5173",
    "http://localhost:8080",
    "http://127.0.0.1:3000",
    "http://127.0.0.1:3001",
    "http://127.0.0.1:3002",
    "http://127.0.0.1:3003",
    "http://127.0.0.1:3004",
    "http://127.0.0.1:5173",
    "http://127.0.0.1:8080"
  ],
  "RateLimiting": {
    "PermitLimit": 200,
    "WindowMinutes": 1
  },
  "YouTube": {
    "TimeoutSeconds": 30,
    "MaxRetries": 3,
    "MaxVideoDurationSeconds": 14400,
    "MetadataCacheDurationMinutes": 5
  },
  "Processing": {
    "TempFilePath": "C:\\Temp\\YoutubeRag",
    "MaxVideoSizeMB": 2048,
    "FFmpegPath": "ffmpeg",
    "CleanupAfterHours": 24,
    "MinDiskSpaceGB": 5,
    "ProgressReportIntervalSeconds": 10
  },
  "Whisper": {
    "ModelsPath": "C:\\Models\\Whisper",
    "DefaultModel": "auto",
    "ForceModel": null,
    "ModelDownloadUrl": "https://openaipublic.azureedge.net/main/whisper/models/",
    "CleanupUnusedModelsDays": 30,
    "MinDiskSpaceGB": 10,
    "DownloadRetryAttempts": 3,
    "DownloadRetryDelaySeconds": 5,
    "ModelCacheDurationMinutes": 60,
    "TinyModelThresholdSeconds": 600,
    "BaseModelThresholdSeconds": 1800
  },
  "Cleanup": {
    "JobRetentionDays": 30,
    "NotificationRetentionDays": 60,
    "NotificationDeduplicationMinutes": 5
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning",
        "YoutubeRag.VideoIngestion": "Information",
        "YoutubeRag.Transcription": "Information",
        "YoutubeRag.Jobs": "Information",
        "YoutubeRag.Performance": "Information",
        "YoutubeRag.Security": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/youtuberag-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{CorrelationId}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId", "WithEnvironmentName", "WithProcessId"],
    "Properties": {
      "Application": "YoutubeRag.Api"
    }
  }
}