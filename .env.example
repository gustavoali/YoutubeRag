# Environment Variables for YoutubeRag.NET
# Copy this file to .env and update with your values

# Application Settings
ASPNETCORE_ENVIRONMENT=Local
APP_URL=http://localhost:62788

# Database Configuration
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_PASSWORD=youtube_rag_password
MYSQL_DATABASE=youtube_rag_local
MYSQL_USER=youtube_rag_user

# Redis Configuration
REDIS_PASSWORD=

# OpenAI Configuration (optional for LOCAL mode)
OPENAI_API_KEY=sk-your-openai-api-key-here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRY_DAYS=30

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_PERMIT=100
RATE_LIMIT_WINDOW_MINUTES=1

# Logging
LOG_LEVEL=Information

# Docker Settings
COMPOSE_PROJECT_NAME=youtube-rag
DOCKER_BUILDKIT=1

# Python/Whisper Settings (for local mode)
WHISPER_MODEL=base
WHISPER_LANGUAGE=en

# Storage Settings
UPLOAD_PATH=./uploads
TEMP_PATH=./temp
MAX_UPLOAD_SIZE_MB=1000

# Feature Flags
ENABLE_AUTH=false
ENABLE_WEBSOCKETS=false
ENABLE_METRICS=false
ENABLE_DOCS=true
ENABLE_CORS=true