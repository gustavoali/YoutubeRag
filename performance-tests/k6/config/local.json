{
  "baseUrl": "http://localhost:5000",
  "apiVersion": "v1",
  "thresholds": {
    "http_req_duration": ["p(95)<3000", "p(99)<5000"],
    "http_req_failed": ["rate<0.05"],
    "http_reqs": ["rate>5"]
  },
  "endpoints": {
    "auth": {
      "login": "/api/v1/auth/login",
      "register": "/api/v1/auth/register",
      "me": "/api/v1/auth/me"
    },
    "videos": {
      "list": "/api/v1/videos",
      "ingest": "/api/v1/videos/ingest",
      "fromUrl": "/api/v1/videos/from-url",
      "getById": "/api/v1/videos/{videoId}",
      "progress": "/api/v1/videos/{videoId}/progress",
      "transcript": "/api/v1/videos/{videoId}/transcript"
    },
    "search": {
      "semantic": "/api/v1/search/semantic",
      "keyword": "/api/v1/search/keyword",
      "advanced": "/api/v1/search/advanced",
      "suggestions": "/api/v1/search/suggestions",
      "history": "/api/v1/search/history"
    },
    "health": {
      "health": "/health",
      "ready": "/ready",
      "live": "/live"
    }
  },
  "testUsers": {
    "concurrent": 10,
    "maxUsers": 50
  },
  "rampUp": {
    "duration": "30s",
    "stages": [
      { "duration": "30s", "target": 10 },
      { "duration": "1m", "target": 10 },
      { "duration": "30s", "target": 0 }
    ]
  },
  "timeouts": {
    "request": "60s",
    "connection": "15s"
  },
  "tags": {
    "environment": "local",
    "team": "performance",
    "project": "youtube-rag"
  }
}
