{
  "baseUrl": "http://localhost:5000",
  "apiVersion": "v1",
  "thresholds": {
    "http_req_duration": ["p(95)<2000", "p(99)<3000"],
    "http_req_failed": ["rate<0.01"],
    "http_reqs": ["rate>10"],
    "iteration_duration": ["p(95)<5000"]
  },
  "endpoints": {
    "auth": {
      "login": "/api/v1/auth/login",
      "register": "/api/v1/auth/register",
      "me": "/api/v1/auth/me"
    },
    "videos": {
      "list": "/api/v1/videos",
      "ingest": "/api/v1/videos/ingest",
      "fromUrl": "/api/v1/videos/from-url",
      "getById": "/api/v1/videos/{videoId}",
      "progress": "/api/v1/videos/{videoId}/progress",
      "transcript": "/api/v1/videos/{videoId}/transcript"
    },
    "search": {
      "semantic": "/api/v1/search/semantic",
      "keyword": "/api/v1/search/keyword",
      "advanced": "/api/v1/search/advanced",
      "suggestions": "/api/v1/search/suggestions",
      "history": "/api/v1/search/history"
    },
    "health": {
      "health": "/health",
      "ready": "/ready",
      "live": "/live"
    }
  },
  "testUsers": {
    "concurrent": 50,
    "maxUsers": 200
  },
  "rampUp": {
    "duration": "2m",
    "stages": [
      { "duration": "2m", "target": 50 },
      { "duration": "5m", "target": 50 },
      { "duration": "1m", "target": 0 }
    ]
  },
  "timeouts": {
    "request": "30s",
    "connection": "10s"
  },
  "tags": {
    "environment": "default",
    "team": "performance",
    "project": "youtube-rag"
  }
}
